<div class="col-sm-6 col-md-8 col-lg-8" style="background-color: #dcdcdc;">
    <form class="new-post-form">
        <div class="form-group mt-3">
            <label for="postTitle">Post Title:</label>
            <input class="form-control" type="text" name="post-title" placeholder="Enter a title for your post">
        </div>
        <div class="form-group mt-3">
            <label for="postContent">Post Content:</label>
            <textarea class="form-control" id="postContentTextArea" name="post-content" placeholder="Enter the content for your post"
                rows="5"></textarea>
        </div>
        <div class="form-group mt-4 mb-3">
            <label for="exampleFormControlFile1">Upload an image</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
        </div>
        <div class="image-area mt-3 mb-3">
            <img id="img-upload">
        </div>
        <div>
            <button type="submit" class="btn btn-primary mt-3 mb-3">Submit Post</button>
        </div>
    </form>
</div>

<script src="/javascript/user-post.js"></script>