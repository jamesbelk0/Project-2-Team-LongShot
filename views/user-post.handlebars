<div
  class="col-sm-6 col-md-8 col-lg-8 px-3 m-4"
  style="background-color: #dcdcdc;"
>
  <form class="new-post-form p-3">
    <div class="form-group fw-bold">
      <label for="postTitle">Post Title:</label>
      <input
        class="form-control"
        type="text"
        name="post-title"
        placeholder="Enter a title for your post"
        id="name"
      />
    </div>
    <hr />
    <div class="mt-3 fw-bold">
      <p>Select a Category</p>
      <select class="bg-info rounded text-light" id="category-select">
        <option value="Select A Category"></option>
        <option value="Automotive">Automotive</option>
        <option value="DIY">DIY</option>
        <option value="Health">Health</option>
        <option value="Home Improvement">Home Improvement</option>
        <option value="Food">Food</option>
        <option value="Pets">Pets</option>
      </select>
    </div>
    <hr />
    <div class="form-group mt-3 fw-bold">
      <label for="postContent">Post Content:</label>
      <textarea
        class="form-control"
        id="postContentTextArea"
        name="post-content"
        placeholder="Enter the content for your post"
        rows="5"
      ></textarea>
    </div>

    <hr />
    <div class="fw-bold">
      <p>Upload an Image (Optional)</p>
      <input
        type="hidden"
        name="image_url"
        id="image_url"
        class="simple-file-upload"
      />
    </div>
    <div>
      <button
        type="submit"
        class="btn btn-primary mt-3 mb-3"
        id="submitBtn"
      >Submit Post</button>
    </div>
  </form>
</div>

<script src="/js/submit-button.js"></script>